---
ip_route: 127.0.0.1
pid: /var/vcap/sys/run/cloud_director.pid
mbus: nats://<%= node[:nats_server][:user] %>:<%= node[:nats_server][:password] %>@<%= node[:nats_server][:host] %>:<%= node[:nats_server][:port] %>/
local_db: jdbc:postgresql://localhost:5432/cloud_controller
loadbalancer: lbalancer
cloud_controller_db: jdbc:postgresql://localhost:5432/cloud_controller
cloud_name: Titanium
platform_name: CloudFoundry
dea_image: <%= node[:cd][:dea_image]%>
router_image: <%= node[:cd][:router_image]%>
main_image: <%= node[:cd][:main_image]%>
provider_uri: <%= node[:cd][:provider_uri]%>
username: Administrator
password: abcd1234
db_user: root
db_password: changeme
server_size: m1.small

smart_kill_min: 15

scale_up_magnitude: 1
scale_down_magnitude: -1

monitoring_interval_sec: 5000
autoscaling_interval_sec: 120000
sleep_period_min: 15

scale_up_switch: false
scale_down_switch: false
dea_collection: false

low_cpu_limit: 30
high_cpu_limit: 85
latency_upper_limit: 25
latency_under_limit: 10
autoscaling_type: latency
dropped_req_limit: 5
