#!/usr/bin/env ruby
# -*- mode: ruby -*-
classpath = './'
Dir.chdir(File.expand_path("../../lib", __FILE__)) do
Dir.glob("*.jar").each { |path|
 classpath = "#{classpath}:./#{path}"
 }
end
Dir.chdir(File.expand_path("../../lib", __FILE__))
exec("java -cp #{classpath} com.sap.jpaas.cloudwatcher.CloudWatcher -pid #{Process.pid()} #{ARGV.dup.join(' ')}")
